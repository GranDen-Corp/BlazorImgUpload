@page "/"
@namespace BlazorImgUploadDemo.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
    var projectAssemblyName = typeof(Program).Assembly.GetName().Name;
    var rclCompName = typeof(GranDen.Blazor.Bootstrap.ImageUpload.BootstrapImgUpload).Assembly.GetName().Name;
}

